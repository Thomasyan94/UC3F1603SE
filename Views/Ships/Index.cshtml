@model IEnumerable<ys.Models.Ship>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.shipName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FClass)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FCPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EClass)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ECPrice)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.shipName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FClass)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FCPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EClass)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ECPrice)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
